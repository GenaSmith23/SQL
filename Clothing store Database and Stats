--display the database ordered by Aisle. 
SELECT * FROM pants 
ORDER BY Aisle;

-what is the SUM(PRICE) of all pants
SELECT SUM(PRICE) FROM pants;

-What is the price of pants less that 13 ordered by Aisle
SELECT* From pants where PRiCE>13 ORDER BY aisle;
